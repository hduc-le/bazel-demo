# Main BUILD file that references the sub-BUILD files

# Alias for the Kotlin service - delegates to the actual service BUILD
alias(
    name = "kotlin_service",
    actual = "//app/kotlin/src/main/kotlin/com/demo/service:kotlin_service",
    visibility = ["//visibility:public"],
)

# Alias for shared models - delegates to the models BUILD
alias(
    name = "shared_models",
    actual = "//app/kotlin/src/main/kotlin/com/demo/models:shared_models",
    visibility = ["//visibility:public"],
)
